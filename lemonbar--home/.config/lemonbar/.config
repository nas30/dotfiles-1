#!/bin/sh

# Import config files.
. ~/.universal

# Status bar settings. Comment out blocks you do not want to use.
selectedBlocks=(
#   "network"
    "media"
#   "dropbox"
    "volume"
#   "battery"
    "calendar"
    "clock"
)

# Universal bar settings.
separator="%{F${accent}}   ::   "

# Time between bar updates in seconds.
sleepTime=1s

gapSize=16
borderSize=4
panelHeight=$((${gapSize} * 2))
panelWidth=$((${screenWidth} - ${panelHeight}))
panelX=${gapSize}
topPanelY=${gapSize}
bottomPanelY=$((${screenHeight} - ${gapSize} - ${panelHeight}))

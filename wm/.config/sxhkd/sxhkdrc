# Open the program launcher.
super + Return
	rofi -show run

# Reload sxhkd and xresources.
super + shift + r
	pkill -USR1 -x sxhkd && xrdb -load ~/.Xresources

# Quit the current X session.
super + shift + Escape
	bspc quit

# Kill the focused node.
super + F4
	bspc node -k

# Change focus to node in the given direction.
super + {Left, Down, Up, Right}
	bspc node -f {west, south, north, east}

# Change focus to clicked node.
~button1
    bspc pointer -g focus

# Swap focused node with the window in the given direction.
super + shift + {Left, Down, Up, Right}
     bspc node -s {west, south, north, east}

# Change which direction the next node will open in.
super + ctrl + {Left, Down, Up, Right}
    bspc node -p {west, south, north, east}

# Move selected node to the given desktop number.
super + shift + {1, 2, 3, 4, 5}
    bspc node -d {One, Two, Three, Four, Five} -f

# Change desktop to the given number.
super + {1, 2, 3, 4, 5}
    bspc desktop -f {One, Two, Three, Four, Five}

# Take screenshot.
Print
    ~/bin/screenie

# Raise volume.
XF86AudioRaiseVolume
    ponymix increase 5

# Lower volume.
XF86AudioLowerVolume
    ponymix decrease 5

# Toggle volume mute.
XF86AudioMute
    ponymix toggle

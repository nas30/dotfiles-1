# Reload window manager modules.
super + shift + r
	pkill -USR1 -x sxhkd && killall lemonbar && xrdb -load ~/.Xresources && ~/.config/bspwm/bspwmrc

# Quit the current X session.
super + shift + Escape
	bspc quit

# Close the focused node.
super + F4
	bspc node -c

# Change focus to node in the given direction.
super + {Left, Down, Up, Right}
	bspc node -f {west, south, north, east}

# Change focus to clicked node.
~button1
    bspc pointer -g focus

# Swap focused node with the node in the given direction.
super + shift + {Left, Down, Up, Right}
     bspc node -s {west, south, north, east}

# Preselect where the next node will open.
super + ctrl + {Left, Down, Up, Right}
    bspc node -p {west, south, north, east}

# Change ratio of node preselectoin.
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# Cancel node preselection.
super + ctrl + Escape
    bspc node -p cancel

# Move selected node to the given desktop number.
super + shift + {1, 2, 3, 4, 5}
    bspc node -d {One, Two, Three, Four, Five}

# Change desktop to the given number.
super + {1, 2, 3, 4, 5}
    bspc desktop -f {One, Two, Three, Four, Five}

# # #

# Open the program launcher.
super + Return
    rofi -show run

# Take screenshot.
Print
    ~/bin/screenie

# Raise volume.
XF86AudioRaiseVolume
    ponymix increase 5

# Lower volume.
XF86AudioLowerVolume
    ponymix decrease 5

# Toggle volume mute.
XF86AudioMute
    ponymix toggle

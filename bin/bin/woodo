#!/usr/bin/env bash

K="$(tput setaf 240)"
Y="$(tput setaf 11)"
O="$(tput setaf 3)"
DG="$(tput setaf 2)"
LG="$(tput setaf 10)"
P="$(tput setaf 130)"
W="$(tput setaf 15)"
CLEAR="$(tput sgr0)"

if [[ "$EUID" != 0 ]]
then
    # Non-root
    echo "It's a weird tree."
else
    # Root!
    cat <<-EOF

                            ${K}████
                            ${K}██${Y}██${K}██
        ████                ██${Y}██${K}██████
      ██${W}██${LG}██${K}██          ████████${Y}████${O}██${K}██
      ██${LG}████${K}██        ██${Y}████${K}██${O}██${K}██████
        ████████    ██${Y}████████${K}██${O}██${K}██
      ██████${W}██${LG}██${K}██  ██${Y}████████${O}████${K}██      ████
    ██${W}██${LG}██${K}██${LG}████${K}████${Y}██████████${O}████${K}██    ██${LG}██${DG}██${K}██
    ██${LG}████${K}██████████${W}██${Y}██${K}██${Y}██${O}████${K}██  ██████${DG}████${K}██
      ████  ██${O}██${K}██${O}██${Y}██${W}██${Y}████${O}██${K}██████${LG}██${DG}██${K}██████
              ████${Y}██████${W}██${O}████${K}██  ██${DG}████${K}██████
                ██${Y}████${O}██████${K}██████${O}██${K}██████${LG}██${DG}██${K}██
                ██${O}████████████████${K}████  ██${DG}████${K}██
                ██${P}██${O}██████${K}████████        ████
                ██${O}████${P}██${O}██████${K}██
                  ██${O}████████████${K}██
                  ██${P}██${O}██${P}██${O}██████${K}██
                ██${O}██${K}██${O}████${K}██${O}██${K}██████
                ████████████████${O}██${K}██
                            ██${O}████${K}██
                              ████${CLEAR}
                              
	EOF
fi
